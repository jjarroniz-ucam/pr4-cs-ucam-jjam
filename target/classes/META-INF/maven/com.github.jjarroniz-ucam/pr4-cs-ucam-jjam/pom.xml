<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.jjarroniz-ucam</groupId>
	<artifactId>pr4-cs-ucam-jjam</artifactId>
	<version>1.0-SNAPSHOT</version>
	
	<distributionManagement>
	    <repository>
	        <id>github</id>
	        <name>GitHub Packages</name>
	        <url>https://maven.pkg.github.com/jjarroniz-ucam/pr4-cs-ucam-jjam</url>
	    </repository>
	</distributionManagement>


    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.9.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
        	<!-- Plugin para ejecutar tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M7</version>
            </plugin>
            
            <!-- JaCoCo: cobertura de tests -->
        <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.8.11</version>
            <executions>

                <!-- Prepara el agente antes de los tests -->
                <execution>
                    <id>prepare-agent</id>
                    <goals>
                        <goal>prepare-agent</goal>
                    </goals>
                </execution>

                <!-- Genera el informe después de los tests -->
                <execution>
                    <id>report</id>
                    <phase>verify</phase>
                    <goals>
                        <goal>report</goal>
                    </goals>
                </execution>

            </executions>
        </plugin>
            
            <!-- Plugin Checkstyle -->
	        <plugin>
	            <groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-checkstyle-plugin</artifactId>
	            <version>3.2.0</version>
	            <executions>
	                <execution>
	                    <phase>verify</phase>
	                    <goals>
	                        <goal>checkstyle</goal>
	                    </goals>
	                </execution>
	            </executions>
	            <configuration>
	                <configLocation>google_checks.xml</configLocation>
	                <failOnViolation>true</failOnViolation>
	                <linkXRef>false</linkXRef>
	            </configuration>
	        </plugin>
	
	        <!-- Plugin PMD -->
	        <plugin>
	            <groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-pmd-plugin</artifactId>
	            <version>3.16.0</version>
	            <executions>
	                <execution>
	                    <phase>verify</phase>
	                    <goals>
	                        <goal>pmd</goal>
	                        <goal>cpd-check</goal>
	                    </goals>
	                </execution>
	            </executions>
	        </plugin>
	
	        <!-- Plugin para deploy (publicación) -->
	        <plugin>
	            <groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-deploy-plugin</artifactId>
	            <version>3.0.0-M1</version>
	        </plugin>
        
        </plugins>
    </build>

</project>